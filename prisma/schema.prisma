// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String           @id @default(uuid())
  email             String           @unique
  password          String
  name              String
  bio               String
  phone             String
  gender            Gender
  birdDate          DateTime
  role              Role
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @default(now()) @updatedAt
  ClientRequesting  ServiceRequest[] @relation(name: "cRequest")
  ArchitectRequesed ServiceRequest[] @relation(name: "aRequest")
}

model ServiceRequest {
  id              String        @id @default(uuid())
  title           String
  description     String
  status          StatusService
  cServiceResquet User?         @relation(name: "cRequest", fields: [cRequestId], references: [id])
  aServiceResquet User?         @relation(name: "aRequest", fields: [aRequestId], references: [id])
  cRequestId      String?
  aRequestId      String?
}

enum Role {
  CLIENT
  ARCHITECT
}

enum Gender {
  M
  F
}

enum StatusService {
  REQUESTED
  ACCEPTED
  DECLINED
}
