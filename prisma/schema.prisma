// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id        String           @id @default(uuid())
  email     String           @unique
  password  String
  name      String
  phone     String
  gender    Gender
  birdDate  DateTime
  requests  ServiceRequest[]
  createdAt DateTime         @default(now())
  updatedAt DateTime         @default(now()) @updatedAt
}

model Architect {
  id        String           @id @default(uuid())
  email     String           @unique
  password  String
  name      String
  bio       String
  phone     String
  gender    Gender
  birdDate  DateTime
  requests  ServiceRequest[]
  createdAt DateTime         @default(now())
  updatedAt DateTime         @default(now()) @updatedAt
}

model ServiceRequest {
  id          String        @id @default(uuid())
  title       String
  staus       StatusService
  description String
  requester   Client        @relation(fields: [requesterId], references: [id])
  requesterId String
  requested   Architect     @relation(fields: [requestedId], references: [id])
  requestedId String
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @default(now()) @updatedAt
}

enum Gender {
  M
  F
}

enum StatusService {
  REQUESTED
  ACCEPTED
  DECLINED
}
